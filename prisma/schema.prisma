// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  firstName  String
  lastName   String
  location   String
  idealPlans String
  Event      Event[]
}

model Event {
  id          String @id @default(cuid())
  userId      String
  user        User   @relation(fields: [userId], references: [id])
  location    String
  title       String
  length      Int
  description String
  coverPhoto  String
  date        String
  privacy     String
}
